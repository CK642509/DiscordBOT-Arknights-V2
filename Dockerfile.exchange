# syntax=docker/dockerfile:1

FROM debian:bookworm

RUN apt-get update \
    && apt-get install -y --no-install-recommends g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

COPY exchange_algo/main.cpp ./exchange_algo/main.cpp
COPY utils/exchange/ ./utils/exchange/

RUN g++ -std=c++17 -O2 exchange_algo/main.cpp -o utils/exchange/main \
    && chmod +x utils/exchange/main

WORKDIR /workspace/utils/exchange
CMD ["./main"]
